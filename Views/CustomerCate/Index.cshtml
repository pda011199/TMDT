<!--================Category Product Area =================-->
<section class="cat_product_area section_padding border_top">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="left_sidebar_area">
                    <aside class="left_widgets p_filter_widgets sidebar_box_shadow">
                        <div class="l_w_title">
                            <h3>Lọc sản phẩm</h3>
                        </div>
                        <div class="widgets_inner">
                            
                            <form asp-action="OptionSort" asp-controller="CustomerCate">

                                <ul class="list">
                                    <li>
                                        @*<a asp-action="OptionSort" asp-controller="CustomerCate" asp-route-option="1"><input type="radio" aria-label="Radio button for following text input"></a>*@
                                        <a asp-action="OptionSort" asp-controller="CustomerCate" asp-route-option="1">Lọc theo tên</a>
                                    </li>
                                    <li class="active">
                                        @*<a asp-action="OptionSort" asp-controller="CustomerCate" asp-route-option="2"><input type="radio" aria-label="Radio button for following text input"></a>*@
                                        <a asp-action="OptionSort" asp-controller="CustomerCate" asp-route-option="2">Theo giá (Tăng dần)</a>
                                    </li>
                                    <li class="active">
                                        @*<a asp-action="OptionSort" asp-controller="CustomerCate" asp-route-option="3"><input type="radio" aria-label="Radio button for following text input"></a>*@
                                        <a asp-action="OptionSort" asp-controller="CustomerCate" asp-route-option="3">Theo giá (Giảm dần)</a>
                                    </li>
                                </ul>

                                @*<select name="option">
            <option value="1">Theo tên</option>
            <option value="2">Theo giá(tăng dần)</option>
            <option value="3">Theo giá(giảm dần)</option>
        </select>
        <input type="submit" class="btn btn-primary" value="Lọc" />*@
                            </form>
                        </div>
                    </aside>

                </div>
            </div>
            <div class="col-lg-9">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="product_top_bar d-flex justify-content-between align-items-center">
                            <div class="single_product_menu product_bar_item">
                                <h2>Truyện</h2>
                            </div>
                            <div class="product_top_bar_iner product_bar_item d-flex">
                                @*<div class="product_bar_single">
                                        <select class="wide">
                                            <option data-display="Default sorting">Default sorting</option>
                                            <option value="1">Some option</option>
                                            <option value="2">Another option</option>
                                            <option value="3">Potato</option>
                                        </select>
                                    </div>
                                    <div class="product_bar_single">
                                        <select>
                                            <option data-display="Show 12">Show 12</option>
                                            <option value="1">Show 20</option>
                                            <option value="2">Show 30</option>
                                        </select>
                                    </div>*@
                            </div>
                        </div>
                    </div>

                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-sm-6">
                            <div class="single_category_product">
                                <div class="single_category_img">
                                    <a asp-controller="Home" asp-action="Detail" asp-route-id="@item.MaSp" asp-route-name="@item.TenSp"><img src="~/images/@item.HinhAnh" alt=""></a>
                                    <div class="category_social_icon">
                                        <ul>
                                            <li><a href="#"><i class="ti-heart"></i></a></li>
                                            <li><a href="#"><i class="ti-bag"></i></a></li>
                                        </ul>
                                    </div>
                                    <div class="category_product_text">
                                        <a asp-controller="Home" asp-action="Detail" asp-route-id="@item.MaSp" asp-route-name="@item.TenSp"><h5>@item.TenSp</h5></a>
                                        <p>@item.Gia VNĐ</p>
                                    </div>
                                </div>
                            </div>
                        </div>}
                    @*<div class="col-lg-12 text-center">
                        <a href="#" class="btn_2">More Items</a>
                    </div>*@
                </div>
            </div>
        </div>
    </div>
</section>
