
@{
    ViewData["Title"] = "ProductFavor";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <div class="arrival_tittle">
                        <h2 style="text-align:center">Sản phẩm yêu thích</h2>
                    </div>
                </div>

            </div>
        </div>
        @foreach (var item in ViewBag.spyt)
        {
            <div class="col-lg-4 col-sm-6">
                <div class="single_category_product">
                    <div class="single_category_img">
                        <a asp-controller="Home" asp-action="Detail" asp-route-id="@item.SanPham.MaSp" asp-route-name="@item.SanPham.TenSp"><img src="~/images/@item.SanPham.HinhAnh" alt=""></a>
                        <div class="category_social_icon">
                            <ul>
                                <li><a href="#" class="btn btn-active" data-id="@item.MaSp"><i class="ti-heart"></i></a></li>
                                <li><a asp-controller="Cart" asp-action="Buy" asp-route-id="@item.SanPham.MaSp" asp-route-soLuong="1"><i class="ti-bag"></i></a></li>
                            </ul>
                        </div>
                    <div class="category_product_text">
                        <a asp-controller="Home" asp-action="Detail" asp-route-id="@item.SanPham.MaSp" asp-route-name="@item.SanPham.TenSp"><h5>@item.SanPham.TenSp</h5></a>
                        <p>@item.SanPham.Gia VNĐ</p>
                    </div>
                </div>
            </div>
        </div>
    }

    </div>
</div>