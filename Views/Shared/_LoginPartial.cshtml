@using Microsoft.AspNetCore.Identity
@inject SignInManager<DoAn.Models.Domain.User> SignInManager
@inject UserManager<DoAn.Models.Domain.User> UserManager


<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="DetailUser"
               title="Welcome">Welcome @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout" asp-area="">
                <button type="submit" class="nav-link btn btn-link text-info">Logout</button>

            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-action="Login" asp-controller="Account">Đăng nhập</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="Register" asp-controller="Account">Đăng ký</a>
        </li>

    }

</ul>
