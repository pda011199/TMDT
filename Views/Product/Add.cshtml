@model DoAn.Models.Domain.SanPham;
@{
    ViewData["Title"] = "Product Add";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<h1>Add Product</h1>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Add" asp-controller="Product" method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label asp-for="TenSp" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="TenSp" class="form-control" />
                </div>
                <span asp-validation-for="TenSp" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="MaLoaiSp" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <select asp-for="MaLoaiSp" asp-items="@(new SelectList(ViewBag.Category,"MaLoaiSp","TenLoaiSp"))">
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Mota" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Mota" class="form-control" />
                </div>
                <span asp-validation-for="Mota" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Gia" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Gia" class="form-control" />
                </div>
                <span asp-validation-for="Gia" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="SoLuong" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="SoLuong" class="form-control" />
                </div>
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Image</label>
                <div class="col-sm-6">
                    <input class="form-control" type="file" name="photo" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <a asp-action="Index">Back to list</a>
        </form>
    </div>
</div>