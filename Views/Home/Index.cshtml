<!-- upcoming_event part start-->
<section class="cat_product_area section_padding border_top">
    <div class="container">
        <div class="row">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-12">
                        <div class="arrival_tittle">
                            <h2 style="text-align:center">Truyện mới</h2>
                        </div>
                    </div>

                </div>
            </div>
            @foreach (var item in ViewBag.truyen)
            {
                <div class="col-lg-4 col-sm-6">
                    <div class="single_category_product">
                        <div class="single_category_img">
                            <a asp-controller="Home" asp-action="Detail" asp-route-id="@item.MaSp" asp-route-name="@item.TenSp"><img src="~/images/@item.HinhAnh" alt=""></a>
                            <div class="category_social_icon">
                                <ul>
                                    <li><a href="#"><i class="ti-heart"></i></a></li>
                                    <li><a asp-controller="Cart" asp-action="Buy" asp-route-id="@item.MaSp"><i class="ti-bag"></i></a></li>
                                </ul>
                            </div>
                            <div class="category_product_text">
                                <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.MaSp" asp-route-name="@item.TenSp"><h5>@item.TenSp</h5></a>
                                <p>@item.Gia VNĐ</p>
                            </div>
                        </div>
                    </div>
                </div>
            }


            <div class="col-lg-12 text-center">
                <a href="#" class="btn_2">More Items</a>
            </div>
        </div>
    </div>

</section>
