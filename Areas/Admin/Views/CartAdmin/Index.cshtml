
@{ ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; }

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Tình trạng đơn hàng</h1>
</div>
<div class="tab">
    <button class="tablinks" data-table="#waitHoaDon">Đơn đang đợi</button>
    <button class="tablinks" data-table="#unpaidHoaDon">Đơn chưa thanh toán</button>
    <button class="tablinks" data-table="#yetDeliveryHoaDon">Đơn chưa giao hàng</button>
    <button class="tablinks" data-table="#deliveringHoaDon">Đơn đang giao hàng</button>
    <button class="tablinks" data-table="#deliveriedHoaDon">Đơn đã giao hàng</button>
</div>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" style="text-align:center">
            <thead>
                <tr>
                    <th>Mã hóa đơn</th>
                    <th>Họ và tên</th>
                    <th>Số điện thoại</th>
                    <th>Địa chỉ</th>
                    <th>Tổng tiền</th>
                    <th>Loại thanh toán</th>
                    <th>Thanh Toán</th>
                    <th>Trạng thái</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="waitHoaDon">
                @*Danh sách hóa đơn đang đợi*@
                @foreach (var item in ViewBag.waitHoaDon)
                {
                    <tr>
                        <td>@item.MaHD</td>
                        <td>@item.HoTen</td>
                        <td>@item.SDT</td>
                        <td>@item.DiaChi</td>
                        <td>@item.TongTien</td>
                        
                        @if (item.LoaiTT == 2)
                        {
                            <td>Paypal</td>
                        }
                        else
                        {
                            <td>Khi nhận hàng</td>
                        }
                        @if (item.TinhTrang == true)
                        {
                            <td>Đã thanh toán</td>
                        }
                        else
                        {
                            <td>Chưa thanh toán</td>
                        }
                        @if (item.TrangThai == null)
                        {
                            <td>Đang chờ</td>
                            <td><a asp-action="Accept" asp-controller="CartAdmin" asp-route-id="@item.MaHD">Xác nhận</a></td>
                            <td><a asp-action="Cancel" asp-controller="CartAdmin" asp-route-id="@item.MaHD">Từ chối</a></td>
                        }
                        @if (item.TrangThai == false)
                        {
                            <td>Đã hủy</td>
                        }
                        @if (item.TrangThai == true)
                        {
                            <td>Thành công</td>
                        }
                    </tr>
                }
            </tbody>
