@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('tbody').hide().first().show();
            $('.tablinks').on('click', function () {
                const that = $(this);
                const idTab = that.attr('data-table');
                $('tbody').hide();
                $(idTab).show();
            })
        })
    </script>
