@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Danh sách Quyền hạn</h1>
<a asp-action="Create" class="btn btn-primary" asp-controller="Role">Thêm mới QH</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a asp-action="EditUsersInRole" asp-route-roleId="@role.Id" class="btn btn-primary" style="width:auto">Chỉnh sửa người truy cập</a>
                </td>
            </tr>

        }
    </tbody>
</table>  