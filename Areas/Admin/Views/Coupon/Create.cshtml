@model DoAn.Models.Domain.MaKhuyenMai
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Thêm mã giảm giá</h1>
</div>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create" asp-controller="Coupon" method="post">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Ngày bắt đầu</label>
                <div class="col-sm-6">
                    <input asp-for="NgayBatDau" class="form-control" />
                </div>
                <span asp-validation-for="NgayBatDau" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Ngày kết thúc</label>
                <div class="col-sm-6">
                    <input asp-for="NgayKetThuc" class="form-control" />
                </div>
                <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Giá trị (%)</label>
                <div class="col-sm-6">
                    <input asp-for="GiaTri" class="form-control" />
                </div>
                <span asp-validation-for="GiaTri" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm mã giảm giá" class="btn btn-primary" />
            </div>
            <a asp-action="Index">Quay về</a>
        </form>
    </div>
</div>

