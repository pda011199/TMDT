@model DoAn.Models.Domain.LoaiSp;
@{ ViewData["Title"] = "Add";
                Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; }


<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Thêm thể loại</h1>
</div>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Add" asp-controller="Category" method="post">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Tên thể loại</label>
                <div class="col-sm-6">
                    <input asp-for="TenLoaiSp" class="form-control" />
                </div>
                <span asp-validation-for="TenLoaiSp" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
            <a asp-action="Index">Quay về</a>
        </form>
    </div>
</div>


